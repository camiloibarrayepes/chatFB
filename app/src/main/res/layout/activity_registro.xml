<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20sp">

    <EditText
        android:id="@+id/RegistroNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre"/>

    <EditText
        android:id="@+id/RegistroCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Correo"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/RegistroContrase単a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contrase単a"
        android:inputType="textPassword"/>

    <EditText
        android:id="@+id/RegistroContrase単aRepetida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Repite tu contrase単a"
        android:inputType="textPassword"/>
    <Button
        android:id="@+id/RegistroRegistrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Registro"/>



</LinearLayout>